@model List<RecipeSummaryViewModel>

<div class="table-responsive">
	<table class="table table-striped recipe">
		<thead>
			<tr>
				<th>Recipe</th>
				<th>TimeToCook</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var recipe in Model)
			{
				<tr>
					<td class="align-middle">@recipe.Name</td>
					<td class="align-middle">@recipe.TimeToCook</td>
					<td class="align-middle"><a asp-page="Recipes/Index" asp-route-id="@recipe.Id" class="btn btn-primary">Show</a></td>
				</tr>
			}
		</tbody>
	</table>
</div>