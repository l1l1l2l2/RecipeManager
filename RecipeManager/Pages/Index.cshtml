@page
@model IndexModel
@{
    ViewData["Title"] = "Recipes";
}

<a asp-page="Recipes/Create" class="btn-primary btn mb-md-1">Add Recipe</a>

<div class="table-responsive">
    <table class="table table-striped recipe">
        <thead>
            <tr>
                <th>Recipe</th>
                <th>TimeToCook</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recipe in Model.Recipes)
            {
                <tr>
                    <td class="align-middle">@recipe.Name</td>
                    <td class="align-middle">@recipe.TimeToCook</td>
                </tr>
            }
        </tbody>
    </table>
</div>
