@model InputRecipe


<form method="post" class="form-horizontal">
	<div class="form-group">
		<label asp-for="@Model.RecipeName" class="col-md-2 control-label"></label>
		<div class="col-md-10">
			<input asp-for="@Model.RecipeName" class="form-control" value="@Model.RecipeName"/>
			<span asp-validation-for="@Model.RecipeName" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<label asp-for="@Model.TimeToCookHrs" class="col-md-2 control-label"></label>
		<div class="col-md-10">
			<input asp-for="@Model.TimeToCookHrs" class="form-control" value="@Model.TimeToCookHrs"/>
			<span asp-validation-for="@Model.TimeToCookHrs" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<label asp-for="TimeToCookMins" class="col-md-2 control-label"></label>
		<div class="col-md-10">
			<input asp-for="TimeToCookMins" class="form-control" value="@Model.TimeToCookMins"/>
			<span asp-validation-for="TimeToCookMins" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Method" class="col-md-2 control-label"></label>
		<div class="col-md-10">
			<textarea asp-for="@Model.Method" class="form-control">@Model.Method</textarea>
			<span asp-validation-for="@Model.Method" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<div class="checkbox">
				<label class="control-label">
					<input asp-for="@Model.IsVegetarian" value="@Model.IsVegetarian"/> Vegetarian?
					<span asp-validation-for="@Model.IsVegetarian" class="text-danger"></span>
				</label>
			</div>
		</div>
	</div>


	<div class="form-group">
		<table class="table" id="ingredients">
			<thead>
				<tr>
					<th>Ingridient</th>
					<th>Quantity</th>
					<th>Unit</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@for(int i = 0; i < Model.Ingredients.Count; i++)
				{
					<tr>
					<td><input asp-for="Ingredients[i].Name" value="@Model.Ingredients[i].Name"/></td>
					<td><input asp-for="Ingredients[i].Quantity" value="@Model.Ingredients[i].Quantity"/></td>
					<span asp-validation-for="Ingredients[i].Quantity" class="text-danger"></span>
					<td><input asp-for="Ingredients[i].Unit" value="@Model.Ingredients[i].Unit"/></td>
					@*TODO: Correct remove
					<td><a href="#" class="remove">Remove</a></td>*@
					</tr>
				}
			</tbody>
		</table>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<button type="button" class="btn btn-success" id="addIngredient">Add ingredient</button>
			<button type="submit" class="btn btn-primary">Confirm</button>
		</div>
	</div>
</form>